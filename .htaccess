# ------------------------------
# üöÄ Forcer le HTTPS
# ------------------------------
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ------------------------------
# üîí Bloquer l'auto-index (√©vite d'afficher les dossiers)
# ------------------------------
Options -Indexes

# ------------------------------
# üîê Headers de s√©curit√©
# ------------------------------
<IfModule mod_headers.c>

    # HSTS (HTTPS obligatoire)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

    # Protection clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Emp√™che le MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Contr√¥le des referers
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions navigateur
    Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"

    # CSP compatible Vue (safe)
    Header set Content-Security-Policy "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; font-src 'self' data:;"

</IfModule>

# ------------------------------
# ‚ö° Compression GZIP
# ------------------------------
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/json application/xml application/xhtml+xml application/rss+xml application/font-woff2
</IfModule>

# ------------------------------
# üé® Cache des assets (optimis√© pour Vue)
# ------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# ------------------------------
# üü¶ Gestion du routing Vue.js (SPA)
# Redirige TOUT vers index.html...
# ------------------------------
RewriteEngine On

# ... sauf /api/
RewriteCond %{REQUEST_URI} !^/api/

# ... sauf si le fichier existe d√©j√† (assets, images...)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirection fallback vers index.html
RewriteRule . /index.html [L]